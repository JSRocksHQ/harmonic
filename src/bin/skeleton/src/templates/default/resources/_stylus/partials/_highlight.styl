.highlight {
    background-color: lightGrey;
}

.highlight__title {
    //@extends $testline;
    margin: .5em auto;
    display: block;
    font-size: 5em;
    color: yellow;
    text-shadow: 1px 1px 3px rgba(0,0,0,.75);
    font-variant: small-caps;
    text-align: center;
}

.highlight__authorBlock {
    //@extends $testblock;
    //@extends $testline;
    width: 70%;
    margin: 0 auto;
    overflow: hidden;
}

.highlight__authorBlock__pic {
    float: left;
    max-width: 35%;

    //extends $testblock;
}

.highlight__authorName {
    font-size: 1.5em;
    font-weight: bold;
}

.highlight__postDate {
    font-size: 1.5em;
    font-family: monospace;
}

.highlight__excerpt {
    //@extends $testline;
    float: right;
    max-width: 60%;
    font-size: 1.2em;
    padding-top: 3em;

}