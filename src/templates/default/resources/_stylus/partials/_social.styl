.social
    background-color: #000
    overflow: hidden

    .logo
    	float: left
    	width: auto
    	height: 2em

.social__list
    @extends $container
    text-align: right


.social__item
    display: inline-block
    font-size: 1.2rem
    margin: .5em 1em


.social__link
    color: #fff


.social__link:hover path,
.social__link:focus path
    fill: yellow
