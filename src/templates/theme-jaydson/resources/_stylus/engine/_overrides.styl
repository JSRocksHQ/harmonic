*,
*::before,
*::after
    -ms-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box

body
    font-size 100%
    line-height lineHeight
    font-family txtFont
    overflow-x hidden
    font-family "Ubuntu Condensed",sans-serif
    font-weight normal
    line-height 1.2em

a
    text-decoration none
    transition()

img
    max-width 100%

a:hover,
a:focus
	opacity .75

