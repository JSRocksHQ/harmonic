.postContent__title
    @extends $container
    margin: 1em 0 2em
    display: flex
    flex-flow: column
    justify-content: center
    align-items: center

    @media bp-m
        flex-flow: row

.postContent__title h1
    //float: right
    font-size: 2.5rem
    color: green
    margin: 2rem 0
    text-align: center

    @media bp-m
        text-align: left
        flex-basis: 60%

.postContent__title h2
    display: none

    @media bp-m
        display: block
        height: 10em

.postContent
    @extends $container
    margin: 0 auto
    width: 90%

    @media bp-m
        width: 70%


    @media bp-l
        width: 70%

.postContent p
    margin-bottom 1em
    line-height 35px
    font-size 1.5em


.postContent blockquote
    padding 0 .5em
    border-left solid 2px grey


.comments
    @extends $container
    padding: 2rem 0


.comments #disqus_thread
    margin: 0 auto
    width: 90%

    @media bp-l
        width: 60%

article
    a 
        color rgba(22, 53, 101, 1)

time
    display block
    text-align center
